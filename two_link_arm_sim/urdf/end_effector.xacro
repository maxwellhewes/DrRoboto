<?xml version="1.0"?>
    <robot xmlns:xacro="http://www.ros.org/wiki/xacro">
     
        <!-- Parameterized claw macro -->
        <xacro:macro name="end_effector_joint" params="parent">

    <!-- Base link that connects to the arm -->
    <joint name="claw_base_joint" type="fixed">
      <parent link="${parent}"/>
      <child link="claw_base_link"/>
      <origin xyz="-1.87 0 0" rpy="0 0 -1.57"/>
    </joint>

    <link name="claw_base_link">
      <visual>
        <geometry>
          <mesh filename="package://two_link_arm_sim/meshes/claw_big.stl" scale=".0005 .0005 .0005"/>
        </geometry>
        <material name="gray">
          <color rgba="0.5 0.5 0.5 1.0"/>
        </material>
      </visual>
      <collision>
        <geometry>
          <cylinder radius="0.1" length="0.1"/>
        </geometry>
      </collision>
      <inertial>
        <mass value="0.05"/>
        <inertia ixx="0.0001" ixy="0" ixz="0" iyy="0.0001" iyz="0" izz="0.0001"/>
      </inertial>
    </link>

    <!-- Movable claw finger (revolute joint for pinching) -->
    <joint name="gripper_joint" type="revolute">
      <parent link="claw_base_link"/>
      <child link="movable_finger_link"/>
      <origin xyz="-.05 -0.43 0" rpy="3.14 0 -1.57"/>  <!-- Position opposite side -->
      <axis xyz="0 0 1"/>  <!-- Rotation axis (adjust as needed) -->
      <limit effort="10.0" lower="-0.5" upper="0.5" velocity="1.0"/>  <!-- Pinch range -->
    </joint>
    
    <link name="movable_finger_link">
      <visual>
        <geometry>
          <mesh filename="package://two_link_arm_sim/meshes/claw_small.stl" scale=".0005 .0005 .0005"/>
        </geometry>
        <material name="dark_gray">
          <color rgba="0.3 0.3 0.3 1.0"/>
        </material>
      </visual>
      <collision>
        <geometry>
           <cylinder radius="0.1" length="0.1"/>
        </geometry>
      </collision>
      <inertial>
        <mass value="0.02"/>
        <inertia ixx="0.00001" ixy="0" ixz="0" iyy="0.00001" iyz="0" izz="0.00001"/>
      </inertial>
    </link>
    
  </xacro:macro>
     
   </robot>